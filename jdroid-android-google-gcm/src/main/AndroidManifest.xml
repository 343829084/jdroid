<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.jdroid.android.google.gcm">

	<permission android:name="${applicationId}.permission.C2D_MESSAGE" android:protectionLevel="signature" />
	<uses-permission android:name="${applicationId}.permission.C2D_MESSAGE" />

	<application>
		<!-- Google Cloud Messaging Configuration -->
		<service android:name="com.jdroid.android.google.gcm.GcmService" />
		<receiver android:name="com.jdroid.android.google.gcm.GcmBroadcastReceiver" android:exported="true"
				  android:permission="com.google.android.c2dm.permission.SEND">
			<intent-filter>
				<!-- Receive actual messages -->
				<action android:name="com.google.android.c2dm.intent.RECEIVE" />
				<category android:name="${applicationId}" />
			</intent-filter>
		</receiver>
	</application>

</manifest>
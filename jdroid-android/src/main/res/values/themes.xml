<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- Themes -->

	<style name="Jdroid.Theme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- your app branding color for the app bar -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<!-- darker variant for the status bar and contextual app bars -->
		<!-- <item name="colorPrimaryDark">@color/colorPrimaryDark</item> -->
		<!-- theme UI controls like checkboxes and text fields -->
		<item name="colorAccent">@color/accentColor</item>
	</style>

	<style name="Jdroid.Theme.Light" parent="Jdroid.Theme.Base">

	</style>

	<style name="Jdroid.Theme.Light.TranslucentActionBar" parent="Jdroid.Theme.Base">
		<item name="windowActionBarOverlay">true</item>
		<item name="android:windowActionBarOverlay">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<style name="Jdroid.Theme.Light.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- your app branding color for the app bar -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<!-- darker variant for the status bar and contextual app bars -->
		<!-- <item name="colorPrimaryDark">@color/colorPrimaryDark</item> -->
		<!-- theme UI controls like checkboxes and text fields -->
		<item name="colorAccent">@color/accentColor</item>
	</style>

</resources>
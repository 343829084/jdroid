<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
	android:layout_height="wrap_content" android:orientation="vertical">

	<android.support.v7.widget.CardView android:id="@+id/overviewContainer" style="@style/cardViewClickableStyle" android:layout_marginTop="4dp">

		<LinearLayout android:orientation="vertical" style="@style/cardViewInnerClickable">

			<TextView android:id="@+id/name" style="@style/textMedium" android:textStyle="bold"
				android:layout_marginBottom="4dp" android:textColor="@drawable/nav_drawer_text_item_selector" />
			<View style="@style/lineGrey" />

			<TextView android:id="@+id/description" android:layout_height="wrap_content" android:layout_width="match_parent"
				style="@style/textSmall" android:layout_marginTop="8dp" android:textColor="@drawable/nav_drawer_text_item_selector" />

		</LinearLayout>

	</android.support.v7.widget.CardView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- your app branding color for the app bar -->
	<color name="colorPrimary">#159ED0</color>

	<!-- darker variant for the status bar and contextual app bars -->
	<color name="colorPrimaryDark">#2196F3</color>


	<!-- theme UI controls like checkboxes and text fields -->
	<color name="accentColor">#1976D2</color>
	<color name="accentColorPressed">#039BE5</color>

	<!-- Text -->
	<color name="actionBarTextColor">@android:color/white</color>
	<color name="textColor">@android:color/black</color>

	<!-- Action Bar -->
	<color name="actionBarBackground">@color/colorPrimary</color>
	<color name="actionbarMockBackground">#FF489100</color>

	<!-- Nav Drawer -->
	<color name="navDrawerItemsBackground">#FFFFFF</color>
	<color name="navDrawerBackground">#FFFFFF</color>
	<color name="navDrawerItemColor">#444</color>
	<color name="navDrawerItemPressedColor">#44999999</color>
	<color name="navDrawerItemSelectedColor">@color/colorPrimary</color>

	<!-- Maps -->
	<color name="walkingColor">#888888</color>
	<color name="drivingColor">#319FDA</color>

	<!-- Buttons -->
	<color name="grey">#DBDBDB</color>

	<!-- About -->
	<color name="aboutSeparator">#DBDBDB</color>

</resources>
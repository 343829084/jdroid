<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Themes -->

	<style name="Theme.Transparent" parent="android:Theme">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:backgroundDimEnabled">false</item>
	</style>

	<!-- Texts -->

	<style name="baseText">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
	</style>

	<style name="textMicro" parent="baseText">
		<item name="android:textAppearance">?android:textAppearanceSmall</item>
		<item name="android:textSize">@dimen/textMicro</item>
	</style>

	<style name="textSmall" parent="baseText">
		<item name="android:textAppearance">?android:textAppearanceSmall</item>
		<item name="android:textSize">@dimen/textSmall</item>
	</style>

	<style name="textMedium" parent="baseText">
		<item name="android:textAppearance">?android:textAppearanceMedium</item>
		<item name="android:textSize">@dimen/textMedium</item>
	</style>

	<style name="textLarge" parent="baseText">
		<item name="android:textAppearance">?android:textAppearanceLarge</item>
		<item name="android:textSize">@dimen/textLarge</item>
	</style>

	<style name="whiteShadowText">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:shadowColor">@android:color/black</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">-1</item>
	</style>

	<style name="blackShadowText">
		<item name="android:textColor">@android:color/black</item>
		<item name="android:shadowColor">@android:color/white</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">1</item>
	</style>

	<style name="title1Text" parent="baseText">
		<item name="android:textSize">@dimen/title1Text</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="title2Text" parent="baseText">
		<item name="android:textSize">@dimen/title2Text</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="h1Text" parent="baseText">
		<item name="android:textSize">@dimen/h1Text</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="h2Text" parent="baseText">
		<item name="android:textSize">@dimen/h2Text</item>
	</style>

	<style name="normalText" parent="baseText">
		<item name="android:textSize">@dimen/normalText</item>
	</style>

	<style name="smallText" parent="baseText">
		<item name="android:textSize">@dimen/smallText</item>
	</style>

	<style name="noResultsText" parent="normalText">
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:layout_marginTop">10dp</item>
	</style>

	<style name="sectionTitle" parent="h1Text">
		<item name="android:textColor">@color/textColor</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:paddingTop">4dp</item>
	</style>

	<!-- Buttons -->

	<style name="button" parent="h1Text">
		<item name="android:paddingLeft">20dp</item>
		<item name="android:paddingRight">20dp</item>
	</style>

	<style name="mediumButton" parent="h1Text">
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:minWidth">180dp</item>
	</style>

	<style name="largeButton">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:paddingLeft">20dp</item>
		<item name="android:paddingRight">20dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_margin">10dp</item>
	</style>

	<style name="optionButton" parent="title2Text">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:layout_marginTop">4dp</item>
		<item name="android:layout_marginBottom">4dp</item>
	</style>

	<style name="textViewButton" parent="@style/h2Text">
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:paddingTop">4dp</item>
		<item name="android:paddingBottom">4dp</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:background">@drawable/textview_button_selector</item>
		<item name="android:minWidth">100dp</item>
		<item name="android:minHeight">32dp</item>
		<item name="android:gravity">center_horizontal|center_vertical</item>
	</style>


	<!-- Lists & Grids -->

	<style name="parentList" parent="android:Widget.ListView">
		<item name="android:cacheColorHint">@android:color/transparent</item>
		<item name="android:listSelector">@android:color/transparent</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
	</style>

	<style name="list" parent="@style/parentList" />

	<style name="contextualList">
		<item name="android:scrollbars">none</item>
		<item name="android:divider">@drawable/default_bar_tab_separator_dark</item>
		<item name="android:cacheColorHint">@android:color/transparent</item>
		<item name="android:listSelector">@android:color/transparent</item>
	</style>

	<style name="contextualItemText" parent="title2Text">
		<item name="android:textColor">@color/textColor</item>
		<item name="android:textStyle">normal</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
	</style>

	<style name="parentGrid">
		<item name="android:cacheColorHint">@android:color/transparent</item>
		<item name="android:listSelector">@android:color/transparent</item>
	</style>

	<style name="grid" parent="@style/parentGrid" />

	<style name="parentGridList" parent="@style/grid">
		<item name="android:numColumns">1</item>
	</style>

	<style name="gridList" parent="@style/parentGridList" />

	<!-- Dialogs -->

	<style name="customDialog">
		<item name="android:windowFrame">@null</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
		<item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
		<item name="android:background">@android:color/transparent</item>
	</style>

	<!-- Progress Indicators -->

	<style name="smallBlackProgressIndicator" parent="@android:style/Widget.ProgressBar.Inverse">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:indeterminate">true</item>
		<item name="android:background">@android:color/transparent</item>
	</style>

	<style name="smallWhiteProgressIndicator" parent="@android:style/Widget.ProgressBar.Small">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_margin">7dp</item>
		<item name="android:indeterminate">true</item>
		<item name="android:background">@android:color/transparent</item>
	</style>

	<style name="largeWhiteProgressIndicator" parent="@android:style/Widget.ProgressBar.Large">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_margin">7dp</item>
		<item name="android:indeterminate">true</item>
		<item name="android:background">@android:color/transparent</item>
	</style>

	<!-- Borders -->

	<style name="blackBorder1dp">
		<item name="android:background">@drawable/border</item>
		<item name="android:padding">1dp</item>
	</style>

	<style name="lineWhite">
		<item name="android:layout_height">1dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:background">@android:color/white</item>
	</style>

	<style name="lineGrey">
		<item name="android:layout_height">1dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:background">@color/grey</item>
	</style>

	<!--Button Bar -->

	<style name="buttonBarText" parent="android:TextAppearance.Holo.Medium">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:drawablePadding">8dp</item>
		<item name="android:layout_centerInParent">true</item>
		<item name="android:textColor">@color/actionBarText</item>
	</style>

	<!-- Social -->

	<style name="socialButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:typeface">normal</item>
		<item name="android:textSize">@dimen/socialButtonText</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:singleLine">true</item>
		<item name="android:gravity">center</item>
	</style>

	<!-- Facebook -->

	<style name="facebookButton" parent="@style/socialButton">
		<item name="android:background">@drawable/facebook_button_selector</item>
	</style>

	<style name="facebookLoginButton" parent="@style/facebookButton">
		<item name="android:text">@string/signIn</item>
	</style>

	<style name="facebookLogoutButton" parent="@style/facebookButton">
		<item name="android:text">@string/logout</item>
	</style>

	<!-- Google+ -->

	<style name="googlePlusButton" parent="@style/socialButton">
		<item name="android:background">@drawable/common_signin_btn_text_dark</item>
	</style>

	<style name="googlePlusLoginButton" parent="@style/googlePlusButton">
		<item name="android:text">@string/common_signin_button_text</item>
	</style>

	<style name="googlePlusLogoutButton" parent="@style/googlePlusButton">
		<item name="android:text">@string/logout</item>
	</style>

	<style name="googlePlusRevokeButton" parent="@style/googlePlusButton">
		<item name="android:text">@string/revokeAccess</item>
	</style>

	<!-- Nav Drawer -->

	<style name="navDrawerItemText" parent="title2Text">
		<item name="android:textColor">@color/navDrawerItemColor</item>
		<item name="android:textStyle">normal</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
	</style>

	<!-- Update Google Play Services -->

	<style name="updateGooglePlayServicesLegend">
		<item name="android:layout_marginBottom">10dp</item>
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:gravity">center_horizontal</item>
	</style>

	<!-- Toasts -->

	<style name="TextAppearanceToast">
		<item name="android:fontFamily" tools:targetApi="16">sans-serif-condensed</item>
	</style>

	<!-- About -->

	<style name="aboutSeparator">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1dp</item>
		<item name="android:background">@color/aboutSeparator</item>
		<item name="android:layout_marginBottom">8dp</item>
		<item name="android:layout_marginLeft">12dp</item>
		<item name="android:layout_marginRight">12dp</item>
		<item name="android:layout_marginTop">8dp</item>
	</style>

	<!-- CardView -->

	<style name="cardViewStyle" xmlns:card_view="http://schemas.android.com/apk/res-auto">
		<item name="cardBackgroundColor">@android:color/white</item>
	</style>

	<style name="cardViewInner">
		<item name="android:layout_marginTop">8dp</item>
		<item name="android:layout_marginBottom">8dp</item>
		<item name="android:layout_marginLeft">12dp</item>
		<item name="android:layout_marginRight">12dp</item>
	</style>
</resources>
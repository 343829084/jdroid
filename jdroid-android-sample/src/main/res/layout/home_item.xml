<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal"
	android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingLeft="4dp"
	android:paddingRight="4dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:gravity="center_vertical"
	android:background="?android:attr/selectableItemBackground">

	<ImageView android:id="@+id/image" android:layout_width="36dp"
		android:layout_height="36dp" android:scaleType="centerInside"
		android:duplicateParentState="true" />

	<TextView android:id="@+id/name" android:layout_height="wrap_content" android:layout_width="wrap_content"
		style="@style/textMedium" android:layout_marginLeft="10dp" android:duplicateParentState="true" />
</LinearLayout>
